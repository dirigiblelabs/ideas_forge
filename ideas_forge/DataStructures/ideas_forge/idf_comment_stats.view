{
  "viewName":"IDF_COMMENT_STATS",
  "query":"SELECT
	IDFC_REPLY_TO_IDFC_ID,
	IDFI_ID,
	MAX(IDFC_PUBLISH_DATE) AS LATEST_PUBLISH_DATE,
	COUNT(IDFC_REPLY_TO_IDFC_ID) AS REPLIES,
	COUNT(DISTINCT IDFC_USER) AS PARTICIPANTS
FROM IDF_COMMENT, IDF_IDEA
WHERE IDFC_IDFI_ID = IDFI_ID AND 
	 IDFC_REPLY_TO_IDFC_ID > -1
GROUP BY IDFI_ID, IDFC_REPLY_TO_IDFC_ID
ORDER BY LATEST_PUBLISH_DATE, REPLIES, PARTICIPANTS DESC"
}