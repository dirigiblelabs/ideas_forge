{
  "viewName":"IDF_IDEA_STATS",
  "query":"SELECT a.IDFI_ID,
	  a.IDFI_SHORT_TEXT,
	  a.IDFI_DESCRIPTION,
	  a.IDFI_USER,
	  a.IDFI_PUBLISH_DATE,
	  a.IDFI_STATUS,
	  b.LATEST_PUBLISH_DATE,
	  b.REPLIES,
	  b.PARTICIPANTS,
	  c.TOTAL_VOTES,
	  c.RATING
FROM IDF_IDEA AS a 
LEFT JOIN IDF_COMMENT_STATS AS b ON b.IDFI_ID = a.IDFI_ID
LEFT JOIN IDF_IDEA_RATING AS c ON c.IDFI_ID = a.IDFI_ID
ORDER BY b.LATEST_PUBLISH_DATE, c.RATING, c.TOTAL_VOTES, b.REPLIES, b.PARTICIPANTS DESC"
}